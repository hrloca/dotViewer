{
  "include": ["src/**/*", "src/**/*.json"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react"
  }
}
